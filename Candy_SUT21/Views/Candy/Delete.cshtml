@model CandyEditViewModel

@{
    ViewBag.Title = "Delete Candy";
}

<div class="container-flow">
    <form class="form-horizontal" method="post" asp-action="Delete" asp-route-id="@Model.CandyId">
        <input type="hidden" asp-for="CandyId" />
        <input type="hidden" asp-for="StockAmount" />
        <input type="hidden" asp-for="FileImage"/>
        <input type="hidden" asp-for="FileImageThumbnail"/>
        <input type="hidden" asp-for="DiscountId"/>
        <input type="hidden" asp-for="Discounts" />
        <input type="hidden" asp-for="ExistingImagePath"/>
        <input type="hidden" asp-for="ExistingImageThumbnailPath"/>
        <h2 style="text-align:center;">Delete Candy</h2>
        <div class="form-body">
            <div class="form-group">
                <label asp-for="Name" class="col-sm-2 control-label">Candy name</label>
                <div class="input-group col-sm-9">
                    <span class="input-group-addon"><i class="fa-solid fa-candy-cane"></i></span>
                    <input asp-for="Name" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="col-sm-2 control-label">Category</label>
                <div class="input-group col-sm-9">
                    <span class="input-group-addon"><i class="fa-solid fa-list"></i></span>
                    <input asp-for="@Model.CurrentCategory" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-sm-2 control-label">Description</label>
                <div class="input-group col-sm-9">
                    <span class="input-group-addon"><i class="fa-solid fa-glasses"></i></span>
                    <textarea asp-for="Description" disabled class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="col-sm-2 control-label">Price</label>
                <div class="input-group col-sm-4">
                    <span class="input-group-addon"><i class="fa-solid fa-coins"></i></span>
                    <input asp-for="Price" disabled class="form-control" />
                    <span class="input-group-addon">kr</span>
                </div>
            </div> 
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <div class="row">
                    <div class="row-input col-sm-offset-5">
                        <button type="submit" class="btn btn-primary">Delete</button>
                        <a asp-controller="Candy" asp-action="AdminList" class="btn btn-primary">Return</a>
                    </div>
                </div>
            </div>
        </div>        
    </form>
</div>
