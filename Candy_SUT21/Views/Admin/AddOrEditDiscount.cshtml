@model AddOrEditDiscountViewModel

    <div class="discount-edit-container col-md-10 col-md-offset-1">
        <div class="discount-edit-header">
            <h2>Discount Management</h2>
        </div>
        <form class="discount-edit-form form-group" asp-action="AddOrEditDiscount">
            <input hidden asp-for="@Model.Discount.Id" />
            <input hidden asp-for="@Model.Discount.Candies" />
            <div class="name">
                <label asp-for="@Model.Discount.Name"></label>
                <input class="form-control" type="text" asp-for="@Model.Discount.Name" />
                <span asp-validation-for="@Model.Discount.Name" class="text-danger"></span>
            </div>
            <div class="percentage">
                <label asp-for="@Model.Discount.Percentage"></label>
                <div class="input-group">
                    <input class="form-control" type="number" asp-for="@Model.Discount.Percentage" /><span class="input-group-addon">%</span>
                </div>
                <span asp-validation-for="@Model.Discount.Percentage" class="text-danger"></span>
                
            </div>
            <div class="startDate">
                <label asp-for="@Model.Discount.StartDate"></label>
                <input class="form-control" asp-for="@Model.Discount.StartDate" asp-format="{0:yyyy-MM-ddTHH:mm}" />
                <span asp-validation-for="@Model.Discount.StartDate" class="text-danger"></span>
            </div>
            <div class="endDate">
                <label asp-for="@Model.Discount.EndDate"></label>
                <input class="form-control" asp-for="@Model.Discount.EndDate" asp-format="{0:yyyy-MM-ddTHH:mm}" />
                <span asp-validation-for="@Model.Discount.EndDate" class="text-danger"></span>
            </div>
            <div class="candyInDiscount">
                <label for="inDiscount">Candies in discount</label>
                <select class="form-control" disabled multiple="multiple" id="inDiscount">
                    @if (Model.Discount.Candies.Count() == 0)
                    {
                        <option>No candies in discount!</option>
                    }
                    else
                    {
                        @foreach (var candy in Model.Discount.Candies)
                        {
                            <option>@candy.Name</option>
                        }
                    }

                </select>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>

